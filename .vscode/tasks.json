{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "bin",
                "*.java",
                "-cp",
                "libs/h2-2.3.232.jar"  // Thêm H2 JAR vào classpath
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$javac"],
            "detail": "Generated task by Debugger."
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "bin;libs/h2-2.3.232.jar",  // Đảm bảo classpath bao gồm H2 JAR
                "Main"  // Lớp chính của bạn
            ],
            "group": "none"
        }
    ]
}
